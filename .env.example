# Grahmos Environment Configuration

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=sqlite:./data/grahmos.db
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=your_meilisearch_key

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_32_character_encryption_key

# SSL/TLS Configuration
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_CA_PATH=./certs/ca.crt

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/grahmos.log

# Search Configuration
SEARCH_INDEX_PATH=./data/indexes
SEARCH_CACHE_SIZE=1000
MAX_SEARCH_RESULTS=100

# Security Headers
CORS_ORIGIN=https://localhost:8443
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Configuration
WORKER_THREADS=4
CACHE_TTL=3600

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Development Configuration
DEBUG=false
HOT_RELOAD=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warn