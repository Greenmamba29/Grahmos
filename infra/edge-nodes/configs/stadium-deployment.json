{
  "deployment": {
    "name": "Stadium Emergency Communication Hub",
    "type": "stadium",
    "description": "High-capacity edge nodes for stadium and large venue emergency communications",
    "capacity": {
      "max_concurrent_users": 5000,
      "max_content_size": "10GB",
      "max_bandwidth": "1Gbps"
    }
  },
  "network": {
    "subnet": "10.0.1.0/24",
    "gateway": "10.0.1.1",
    "dns": ["8.8.8.8", "1.1.1.1"],
    "wifi": {
      "ssid": "Grahmos-Emergency",
      "security": "WPA3",
      "channel": "auto",
      "power": "high"
    }
  },
  "p2p": {
    "bootstrap_nodes": [
      "/ip4/bootstrap1.grahmos.io/tcp/4001/p2p/12D3KooWGRMGDJH8Q7Wz8QJX9X2P4Y5Z6A7B8C9D0E1F2G3H4I5J6",
      "/ip4/bootstrap2.grahmos.io/tcp/4001/p2p/12D3KooWABCDEFGH8I7J6K5L4M3N2O1P0Q9R8S7T6U5V4W3X2Y1Z0",
      "/ip4/bootstrap3.grahmos.io/tcp/4001/p2p/12D3KooWXYZ789ABC123DEF456GHI789JKL012MNO345PQR678STU901"
    ],
    "discovery": {
      "mdns_enabled": true,
      "upnp_enabled": true,
      "dht_enabled": true,
      "rendezvous_enabled": true
    },
    "connection_limits": {
      "max_peers": 200,
      "min_peers": 10,
      "max_pending_incoming": 50,
      "max_pending_outgoing": 100,
      "connection_timeout": 30,
      "keep_alive_interval": 60
    },
    "protocols": {
      "gossipsub": {
        "enabled": true,
        "heartbeat_interval": 1,
        "fanout_ttl": 60,
        "mcache_len": 5,
        "mcache_gossip": 3
      },
      "kad_dht": {
        "enabled": true,
        "mode": "server",
        "protocol_prefix": "/grahmos/stadium"
      },
      "bitswap": {
        "enabled": true,
        "max_message_size": "4MB"
      }
    }
  },
  "content": {
    "offline_wikipedia": {
      "enabled": true,
      "languages": ["en", "es", "fr"],
      "size_limit": "8GB"
    },
    "emergency_resources": {
      "enabled": true,
      "categories": [
        "first-aid",
        "evacuation-procedures", 
        "emergency-contacts",
        "venue-maps",
        "safety-protocols"
      ]
    },
    "local_content": {
      "enabled": true,
      "max_size": "2GB",
      "auto_sync": true
    }
  },
  "monitoring": {
    "enabled": true,
    "endpoints": {
      "prometheus": "http://monitoring.grahmos.io:9090",
      "grafana": "http://monitoring.grahmos.io:3000",
      "alertmanager": "http://monitoring.grahmos.io:9093"
    },
    "metrics": {
      "collection_interval": 15,
      "retention_period": "7d",
      "high_cardinality_enabled": true
    },
    "alerts": {
      "cpu_threshold": 80,
      "memory_threshold": 85,
      "disk_threshold": 90,
      "network_latency_threshold": 100,
      "p2p_peer_threshold": 5
    },
    "logging": {
      "level": "info",
      "format": "json",
      "output": ["file", "syslog"],
      "rotation": {
        "max_size": "100MB",
        "max_files": 10,
        "compress": true
      }
    }
  },
  "security": {
    "encryption": {
      "tls_enabled": true,
      "cert_path": "/etc/grahmos/certs",
      "min_tls_version": "1.3"
    },
    "authentication": {
      "required": false,
      "emergency_bypass": true,
      "methods": ["anonymous", "device_id"]
    },
    "firewall": {
      "enabled": true,
      "default_policy": "deny",
      "allowed_ports": [80, 443, 4001, 8080, 9090],
      "rate_limiting": {
        "enabled": true,
        "requests_per_minute": 100,
        "burst_size": 50
      }
    },
    "content_verification": {
      "enabled": true,
      "signature_required": true,
      "trusted_keys_url": "https://keys.grahmos.io/stadium.json"
    }
  },
  "backup": {
    "enabled": true,
    "strategy": "incremental",
    "schedule": "0 2 * * *",
    "retention": {
      "daily": 7,
      "weekly": 4,
      "monthly": 12
    },
    "destinations": [
      {
        "type": "s3",
        "bucket": "grahmos-stadium-backups",
        "region": "us-east-1",
        "encryption": "AES256"
      },
      {
        "type": "local",
        "path": "/var/backups/grahmos",
        "encryption": "gpg"
      }
    ]
  },
  "performance": {
    "resources": {
      "min_cpu_cores": 4,
      "min_memory_gb": 8,
      "min_disk_gb": 100,
      "network_bandwidth_mbps": 1000
    },
    "caching": {
      "enabled": true,
      "memory_cache_size": "2GB",
      "disk_cache_size": "5GB",
      "ttl_seconds": 3600
    },
    "compression": {
      "enabled": true,
      "algorithms": ["gzip", "brotli"],
      "min_file_size": 1024
    }
  },
  "deployment_targets": [
    {
      "name": "primary-gateway",
      "role": "gateway",
      "ip": "10.0.1.101",
      "hardware": {
        "cpu": "Intel i7-12700K",
        "memory": "32GB",
        "storage": "1TB NVMe SSD",
        "network": "Gigabit Ethernet + WiFi 6"
      }
    },
    {
      "name": "secondary-gateway",
      "role": "backup_gateway",
      "ip": "10.0.1.102",
      "hardware": {
        "cpu": "Intel i5-12400",
        "memory": "16GB", 
        "storage": "500GB NVMe SSD",
        "network": "Gigabit Ethernet + WiFi 6"
      }
    },
    {
      "name": "content-server",
      "role": "content_distribution",
      "ip": "10.0.1.103",
      "hardware": {
        "cpu": "AMD Ryzen 7 5700X",
        "memory": "32GB",
        "storage": "2TB NVMe SSD",
        "network": "Gigabit Ethernet"
      }
    }
  ],
  "testing": {
    "load_testing": {
      "concurrent_users": [100, 500, 1000, 2000, 5000],
      "duration_minutes": 30,
      "ramp_up_time_minutes": 5
    },
    "failover_testing": {
      "scenarios": [
        "primary_gateway_failure",
        "network_partition",
        "power_outage_simulation",
        "high_load_stress_test"
      ]
    },
    "acceptance_criteria": {
      "max_response_time_ms": 500,
      "min_availability_percent": 99.9,
      "max_data_loss_minutes": 0,
      "failover_time_seconds": 30
    }
  }
}
