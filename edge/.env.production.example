# Production Environment Configuration
# Copy this file to .env.production and update with actual production values

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_TTL_SECONDS=300

# Database Configuration
DATABASE_PATH=/data/grahmos/fts.sqlite
DATABASE_MODE=ro

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# mTLS Configuration
CLIENT_CA_PATH=/certs/ca.crt
SERVER_CERT_PATH=/certs/server.crt
SERVER_KEY_PATH=/certs/server.key

# Update System Configuration
UPDATE_SIGNING_KEY=/keys/update-signing.key
UPDATE_PUBLIC_KEY=/keys/update-public.key

# Logging Configuration
LOG_LEVEL=info
LOG_INJECTION_PREVENTION=true
SENSITIVE_DATA_MASKING=true
LOG_FORMAT=json

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'none'"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ENABLED=false
CORS_ORIGIN=

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Features
ENABLE_SEARCH_CACHE=true
CACHE_TTL_SECONDS=300
MAX_SEARCH_RESULTS=100