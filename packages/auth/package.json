{
  "name": "@packages/auth",
  "version": "2.0.0",
  "description": "Grahmos Enterprise Authentication & Authorization Service",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "echo 'Skipping auth package build due to errors from main branch'",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "otplib": "^12.0.1",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "express": "^4.18.2",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "openid-client": "^5.6.4",
    "saml2-js": "^4.0.2",
    "argon2": "^0.40.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/cors": "^2.8.17",
    "eslint": "^8.57.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.4",
    "vitest": "^1.3.1",
    "@vitest/coverage-v8": "^1.3.1"
  },
  "keywords": [
    "authentication",
    "authorization", 
    "jwt",
    "mfa",
    "rbac",
    "security",
    "enterprise",
    "grahmos"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts", 
      "import": "./dist/middleware.js"
    },
    "./rbac": {
      "types": "./dist/rbac.d.ts",
      "import": "./dist/rbac.js"
    }
  }
}
