{
  "//": "GrahmOS Chromium Policies Configuration",
  
  "HomepageLocation": "https://grahmos.localhost:3000",
  "HomepageIsNewTabPage": false,
  "NewTabPageLocation": "https://grahmos.localhost:3000/launch",
  "RestoreOnStartup": 4,
  "RestoreOnStartupURLs": ["https://grahmos.localhost:3000/launch"],
  
  "DefaultSearchProviderEnabled": true,
  "DefaultSearchProviderName": "Grahmos Search",
  "DefaultSearchProviderKeyword": "g",
  "DefaultSearchProviderSearchURL": "https://grahmos.localhost:8787/search?q={searchTerms}",
  "DefaultSearchProviderSuggestURL": "https://grahmos.localhost:8787/suggest?q={searchTerms}",
  "DefaultSearchProviderIconURL": "https://grahmos.localhost:8787/assets/search-icon.png",
  "DefaultSearchProviderEncoding": "UTF-8",
  
  "ExtensionSettings": {
    "*": {
      "installation_mode": "blocked",
      "runtime_blocked_hosts": ["*://ads.example.com", "*://tracking.example.com"]
    },
    "grahmos-extension-id-here": {
      "installation_mode": "force_installed",
      "update_url": "https://grahmos.localhost:8787/extensions/updates.xml"
    }
  },
  
  "URLAllowlist": [
    "https://grahmos.localhost:3000/*",
    "https://grahmos.localhost:8787/*", 
    "https://*.grahmos.org/*",
    "https://tile.openstreetmap.org/*",
    "https://*.cesium.com/*"
  ],
  
  "URLBlocklist": [
    "*://facebook.com/*",
    "*://twitter.com/*",
    "*://tiktok.com/*", 
    "*://instagram.com/*",
    "*://snapchat.com/*",
    "*://doubleclick.net/*",
    "*://googlesyndication.com/*",
    "*://googletagmanager.com/*"
  ],
  
  "CookiesBlockedForUrls": [
    "*://ads.example.com",
    "*://tracking.example.com", 
    "*://analytics.example.com"
  ],
  
  "JavaScriptAllowedForUrls": [
    "https://grahmos.localhost:3000/*",
    "https://grahmos.localhost:8787/*",
    "https://*.grahmos.org/*"
  ],
  
  "NotificationsAllowedForUrls": [
    "https://grahmos.localhost:3000/*",
    "https://grahmos.localhost:8787/*"
  ],
  
  "PopupsAllowedForUrls": [
    "https://grahmos.localhost:3000/*",
    "https://grahmos.localhost:8787/*"
  ],
  
  "WebRtcLocalIpsAllowedUrls": [
    "https://grahmos.localhost:3000/*",
    "https://grahmos.localhost:8787/*"
  ],
  
  "// Security Settings": "",
  "SafeBrowsingEnabled": true,
  "SafeBrowsingExtendedReportingEnabled": false,
  "PasswordManagerEnabled": true,
  "AutofillAddressEnabled": false,
  "AutofillCreditCardEnabled": false,
  "SyncDisabled": true,
  "SigninAllowed": false,
  "BrowserSignin": 0,
  "ForceGoogleSafeSearch": false,
  "SpellcheckEnabled": true,
  "TranslateEnabled": false,
  
  "// Privacy Settings": "",
  "MetricsReportingEnabled": false,
  "SearchSuggestEnabled": true,
  "NetworkPredictionOptions": 0,
  "BackgroundModeEnabled": false,
  "BackgroundAppRefreshEnabled": false,
  "CloudPrintProxyEnabled": false,
  "DefaultGeolocationSetting": 2,
  "DefaultNotificationsSetting": 2,
  "DefaultMediaStreamSetting": 2,
  
  "// Offline and P2P Settings": "",
  "DeveloperToolsAvailable": true,
  "AllowOutdatedPlugins": false,
  "AlwaysAuthorizePlugins": false,
  "RemoteAccessHostFirewallTraversal": false,
  "CommandLineFlagSecurityWarningsEnabled": true,
  
  "// GrahmOS Specific Settings": "",
  "BookmarkBarEnabled": true,
  "ShowHomeButton": true,
  "ShowAppsShortcutInBookmarkBar": false,
  "EnableMediaRouter": false,
  "HideWebStoreIcon": true,
  "AllowDeletingBrowserHistory": false,
  
  "ManagedBookmarks": [
    {
      "toplevel_name": "GrahmOS"
    },
    {
      "name": "Emergency Response",
      "url": "https://grahmos.localhost:3000/emergency"
    },
    {
      "name": "Search & Documentation", 
      "url": "https://grahmos.localhost:3000/search"
    },
    {
      "name": "3D Emergency Mapping",
      "url": "https://grahmos.localhost:3000/mapping"
    },
    {
      "name": "P2P Network Status",
      "url": "https://grahmos.localhost:3000/network"
    },
    {
      "name": "System Settings",
      "url": "https://grahmos.localhost:3000/settings"
    }
  ],
  
  "PinnedLauncherApps": [
    "https://grahmos.localhost:3000"
  ]
}
